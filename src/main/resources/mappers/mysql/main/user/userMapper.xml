<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sfass.bsamonitoring.user.mapper.UserMapper">

    <select id="loginUser" resultType="User" parameterType="UserLoginDto">
        SELECT *
        FROM ${bsa.db.schema}.user
        WHERE 1=1
            AND user_id = #{userId}
            AND user_pwd = #{userPwd}
    </select>

</mapper>